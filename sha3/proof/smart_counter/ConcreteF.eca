  local module CP' (P' : PRPt.Oracles) = {
    proc f (x : state) = {
      var y <- (b0,c0);
      if (!x \in dom C.m) {
        y <@ P'.f(x);
        C.m.[x]  <- y;
        C.mi.[y] <- x;
      } else {
        y <- oget C.m.[x];
      }
      return y;
    }
    proc fi (x : state) = {
      var y <- (b0,c0);
      if (!x \in dom C.mi) {
        y <@ P'.f(x);
        C.mi.[x] <- y;
        C.m.[y]  <- x;
      } else {
        y <- oget C.mi.[x];
      }
      return y;
    }
  }.

