module PF = {
  var m, mi: (state,state) fmap

  proc init(): unit = {
    m  <- map0;
    mi <- map0;
  }

  proc f(x : state): state = {
    var y1, y2;

    if (!mem (dom m) x) {
      y1           <$ bdistr;
      y2           <$ cdistr;
      m.[x]        <- (y1,y2);
      mi.[(y1,y2)] <- x;
    }
    return oget m.[x];
  }

  proc fi(x : state): state = {
    var y1, y2;

    if (!mem (dom mi) x) {
      y1          <$ bdistr;
      y2          <$ cdistr;
      mi.[x]      <- (y1,y2);
      m.[(y1,y2)] <- x;
    }
    return oget mi.[x];
  }

}.

module CF(D:DISTINGUISHER) = Indif(SqueezelessSponge(PF), PF, D).
     
